<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>13.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    
    <!-- NuGet Package Metadata -->
    <PackageId>MercadoBitcoin.Client</PackageId>
    <Version>2.0.0</Version>
    <Authors>Ernane Sa</Authors>
    <Company>Open Source</Company>
    <Description>A complete .NET 9 client library for MercadoBitcoin API v4 with native HTTP/2 support and System.Text.Json. Provides access to all public and private endpoints including trading, wallet operations, and account management. Features HTTP/2 by default for maximum performance, retry policies with Polly, comprehensive test suite (59 tests), and clean architecture with AOT compatibility.</Description>
    <PackageTags>mercadobitcoin;bitcoin;cryptocurrency;trading;api;client;dotnet;http2;performance;polly;systemtextjson;aot;sourcegenerators;net9;csharp13</PackageTags>
    <PackageProjectUrl>https://github.com/ernanesa/MercadoBitcoin.Client</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ernanesa/MercadoBitcoin.Client</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <IsAotCompatible>true</IsAotCompatible>
    <PackageReleaseNotes>v2.0.0 - BREAKING CHANGES:
• Migrated from Newtonsoft.Json to System.Text.Json with Source Generators
• Improved performance up to 2.1x faster serialization
• Added AOT (Ahead-of-Time) compilation support
• Comprehensive test suite with 59 tests covering all endpoints
• Enhanced error handling and authentication management
• Updated to .NET 9 and C# 13
• HTTP/2 native support maintained
• Breaking: JSON serialization behavior may differ from v1.x
• Breaking: Some property names now use snake_case in JSON
• Migration guide available in README</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>

    <PackageReference Include="Polly" Version="8.2.0" />
    <PackageReference Include="Polly.Extensions.Http" Version="3.0.0" />


    <PackageReference Include="NSwag.MSBuild" Version="14.5.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <Target Name="NSwag" BeforeTargets="PrepareForBuild">
    <Message Text="Executing NSwag..." Importance="high" />
    <Exec Command="dotnet $(NuGetPackageRoot)nswag.msbuild\14.5.0\tools\Net90\dotnet-nswag.dll openapi2csclient /input:$(MSBuildProjectDirectory)\..\..\openapi\swagger.yaml /output:Generated\GeneratedClient.cs /namespace:MercadoBitcoin.Client.Generated /JsonLibrary:SystemTextJson" />
  </Target>

</Project>